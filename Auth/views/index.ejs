<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Keep existing meta tags -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="<%= description %>">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="icon" type="image/x-icon" href="/images/favicon.ico">
    <!-- Keep other meta tags -->
    <script src="/socket.io/socket.io.js"></script>
    <script src="/js/socket.io.client.js"></script>
    <style>
        :root {
            --primary: <%= config.theme.primary %>;
            --secondary: <%= config.theme.secondary %>;
            --accent: <%= config.theme.accent %>;
            --background: <%= config.theme.background %>;
            --online: #4CAF50;
            --offline: #F44336;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1><%= title %></h1>
            <p class="header-description"><%= description %></p>
        </div>

        <div class="stats-container">
            <div class="stat-card">
                <div class="stat-value" id="overall-uptime">0%</div>
                <div class="stat-label">Overall Uptime</div>
            </div>
            <div class="stat-card">
                <div class="stat-value" id="online-count">0</div>
                <div class="stat-label">Services Online</div>
            </div>
            <div class="stat-card">
                <div class="stat-value"><%= config.services.length %></div>
                <div class="stat-label">Total Services</div>
            </div>
        </div>

        <div class="services-list">
            <% config.services.forEach((service) => { %>
                <div class="service-item" id="service-<%= service.name.replace(/[^a-zA-Z0-9]/g, '-') %>">
                    <div class="service-header">
                        <div class="service-info">
                            <h2><%= service.name %></h2>
                            <div class="service-meta">
                                <%= service.type.toUpperCase() %> â€¢ <%= service.type === 'http' ? service.url : `${service.host}:${service.port}` %>
                            </div>
                        </div>
                        <div class="service-metrics">
                            <div class="metric">
                                <span class="metric-label">Ping</span>
                                <span class="metric-value" id="ping-<%= service.name %>">
                                    <%= serviceHistory[service.name]?.responseTime || 0 %>ms
                                </span>
                            </div>
                            <div class="metric">
                                <span class="metric-label">Uptime</span>
                                <span class="metric-value" id="uptime-<%= service.name %>">
                                    <%= ((serviceHistory[service.name]?.uptime / Math.max(serviceHistory[service.name]?.checks, 1)) * 100).toFixed(2) %>%
                                </span>
                            </div>
                        </div>
                        <div class="status-badge <%= serviceHistory[service.name]?.status ? 'status-online' : 'status-offline' %>">
                            <%= serviceHistory[service.name]?.status ? 'Online' : 'Offline' %>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>

    <footer class="footer">
        <div class="footer-content">
            <div class="footer-info">
                <p>&copy; <%= new Date().getFullYear() %> <%= title %></p>
                <p class="footer-stats">Monitoring <%= config.services.length %> Services</p>
            </div>
            <div class="footer-links">
                <a href="https://github.com/Hex-Modz/" target="_blank" rel="noopener">
                    <i class="fab fa-github"></i> GitHub
                </a>
            </div>
        </div>
    </footer>
</body>
</html>
