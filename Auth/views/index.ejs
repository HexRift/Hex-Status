<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="<%= description %>">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="icon" type="image/x-icon" href="/images/favicon.ico">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <script src="/socket.io/socket.io.js"></script>
    <script src="/js/socket.io.client.js"></script>
    <style>
        :root {
            --primary: <%= config.theme.primary %>;
            --secondary: <%= config.theme.secondary %>;
            --accent: <%= config.theme.accent %>;
            --background: <%= config.theme.background %>;
        }
    </style>
</head>
<body>
    <div class="container">
        <header class="header">
            <div class="logo-container">
                <h1><%= title %></h1>
            </div>
            <p class="header-description"><%= description %></p>
        </header>

        <div class="stats-container">
            <div class="stat-card">
                <i class="fas fa-chart-line stat-icon"></i>
                <div class="stat-value" id="overall-uptime">0%</div>
                <div class="stat-label">Overall Uptime</div>
            </div>
            <div class="stat-card">
                <i class="fas fa-server stat-icon"></i>
                <div class="stat-value" id="online-count">0</div>
                <div class="stat-label">Services Online</div>
            </div>
            <div class="stat-card">
                <i class="fas fa-network-wired stat-icon"></i>
                <div class="stat-value"><%= config.services.length %></div>
                <div class="stat-label">Total Services</div>
            </div>
        </div>

        <div class="services-list">
            <% config.services.forEach((service) => { %>
                <div class="service-item" id="service-<%= service.name.replace(/[^a-zA-Z0-9]/g, '-') %>">
                    <div class="service-header">
                        <div class="service-info">
                            <h2><%= service.name %></h2>
                            <div class="service-meta">
                                <i class="fas fa-link"></i>
                                <%= service.url %>
                            </div>
                        </div>
                        <div class="service-metrics">
                            <div class="metric">
                                <i class="fas fa-tachometer-alt metric-icon"></i>
                                <span class="metric-label">Ping</span>
                                <span class="metric-value" id="ping-<%= service.name %>">
                                    <%= serviceHistory[service.name]?.responseTime || 0 %>ms
                                </span>
                            </div>
                            <div class="metric">
                                <i class="fas fa-clock metric-icon"></i>
                                <span class="metric-label">Uptime</span>
                                <span class="metric-value" id="uptime-<%= service.name %>">
                                    <%= ((serviceHistory[service.name]?.uptime / Math.max(serviceHistory[service.name]?.checks, 1)) * 100).toFixed(2) %>%
                                </span>
                            </div>
                        </div>
                        <div class="status-badge <%= serviceHistory[service.name]?.status ? 'status-online' : 'status-offline' %>">
                            <i class="fas <%= serviceHistory[service.name]?.status ? 'fa-check-circle' : 'fa-times-circle' %>"></i>
                            <%= serviceHistory[service.name]?.status ? 'Online' : 'Offline' %>
                        </div>
                    </div>
                    <div class="downtime-bar">
                        <% serviceHistory[service.name]?.statusHistory.forEach((check, index) => { %>
                            <div class="status-segment <%= check.status ? 'status-up' : 'status-down' %>"
                                style="width: <%= 100 / Math.min(20, serviceHistory[service.name].statusHistory.length) %>%">
                            </div>
                        <% }); %>
                    </div>
                </div>
            <% }); %>
        </div>

        <footer class="footer">
            <div class="footer-content">
                <div class="footer-info">
                    <p>Â© 2024 - <%= new Date().getFullYear() %> Hex Modz</p>
                    <p class="footer-stats">Monitoring <%= config.services.length %> Services</p>
                </div>
                <div class="footer-links">
                    <a href="https://github.com/Hex-Modz/" target="_blank" rel="noopener">
                        <i class="fab fa-github"></i> GitHub
                    </a>
                </div>
            </div>
        </footer>
    </div>
</body>
<script>
    // Ensure socket.io.js is loaded before accessing 'socket'
    var socket = io();  // Initialize socket connection

    socket.on('pingUpdate', (data) => {
        const pingElement = document.getElementById(`ping-${data.serviceName}`);
        if (pingElement) {
            pingElement.textContent = `${data.ping}ms`;

            // Add animation class
            pingElement.classList.add('ping-update');
            setTimeout(() => pingElement.classList.remove('ping-update'), 9000);
        }
    });
</script>
</html>
